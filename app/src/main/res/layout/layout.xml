<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleX="10"
        android:scaleY="50"
        app:srcCompat="@drawable/_09688" />

    <Button
        android:id="@+id/next1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:backgroundTint="@color/white"
        android:onClick="next"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="NEXT"
        android:textColor="@color/black"
        android:translationX="160dp"
        android:translationY="550dp" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="287dp"
        android:layout_height="37dp"
        android:text="WHAT'S YOUR GENDER?"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="24dp"
        android:textStyle="bold"
        android:translationX="60dp"
        android:translationY="40dp" />

    <TextView
        android:id="@+id/goal"
        android:layout_width="287dp"
        android:layout_height="37dp"
        android:text="WHAT'S YOUR GOALl?"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="24dp"
        android:textStyle="bold"
        android:translationX="60dp"
        android:translationY="220dp" />

    <Spinner
        android:id="@+id/goalspen"
        android:layout_width="179dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:background="#FAFAFA"
        android:translationX="100dp"

        android:translationY="310dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Your coach will personalize your workout program based on a few question"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="18dp"
        android:textStyle="italic"
        android:translationY="80dp" />

    <TextView
        android:id="@+id/goaltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Choose your main goal and your coach will help you achieve it."
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="18dp"
        android:textStyle="italic"
        android:translationY="250dp" />
<RadioGroup
    android:id="@+id/group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:textSize="15dp"
        android:textStyle="bold"
        android:translationX="70dp"
        android:translationY="150dp" />

    <RadioButton
        android:id="@+id/female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:textSize="15dp"
        android:textStyle="bold"
        android:translationX="200dp"
        android:translationY="150dp" />

</RadioGroup>

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please fill this to arrive best result "
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="18dp"
        android:textStyle="italic"
        android:translationX="90dp"
        android:translationY="380dp" />

    <TextView
        android:id="@+id/wight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wight:"
        android:textColor="@color/cardview_light_background"
        android:textSize="18dp"
        android:translationX="120dp"
        android:translationY="420dp" />

    <TextView
        android:id="@+id/high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High:"
        android:textColor="@color/cardview_light_background"
        android:textSize="18dp"
        android:translationX="120dp"
        android:translationY="450dp" />

    <EditText
        android:id="@+id/wight1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/black"
        android:translationX="180dp"
        android:translationY="420dp" />

    <EditText
        android:id="@+id/high1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/black"
        android:translationX="180dp"
        android:translationY="450dp" />


</FrameLayout>